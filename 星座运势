    // 初始化运势图表
    let luckChart;
    function initLuckChart(data) {
      const ctx = document.getElementById('luck-chart').getContext('2d');
      
      if (luckChart) {
        luckChart.destroy();
      }
      
      luckChart = new Chart(ctx, {
        type: 'radar',
        data: {
          labels: ['爱情', '事业', '财运', '健康', '人际关系'],
          datasets: [{
            label: '今日运势',
            data: data,
            backgroundColor: 'rgba(139, 92, 246, 0.2)',
            borderColor: 'rgba(139, 92, 246, 1)',
            borderWidth: 2,
            pointBackgroundColor: 'rgba(139, 92, 246, 1)',
            pointRadius: 4,
            pointHoverRadius: 6
          }]
        },
        options: {
          scales: {
            r: {
              angleLines: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              pointLabels: {
                color: 'rgba(255, 255, 255, 0.7)',
                font: {
                  size: 11
                }
              },
              ticks: {
                color: 'rgba(255, 255, 255, 0.5)',
                backdropColor: 'transparent',
                stepSize: 20
              },
              suggestedMin: 0,
              suggestedMax: 100
            }
          },
          plugins: {
            legend: {
              display: false
            }
          },
          elements: {
            line: {
              tension: 0.2
            }
          }
        }
      });
    }
    
    // 生成随机运势数据
    function generateRandomLuckData() {
      return [
        Math.floor(Math.random() * 40) + 60, // 爱情
        Math.floor(Math.random() * 40) + 60, // 事业
        Math.floor(Math.random() * 40) + 60, // 财运
        Math.floor(Math.random() * 40) + 60, // 健康
        Math.floor(Math.random() * 40) + 60  // 人际关系
      ];
    }
    
    // 页面加载完成后执行
    document.addEventListener('DOMContentLoaded', function() {
      // 创建星星背景
      createStars();
      
      // 星座选择按钮点击事件
      const horoscopeBtns = document.querySelectorAll('.horoscope-btn');
      let selectedSign = null;
      
      horoscopeBtns.forEach(btn => {
        btn.addEventListener('click', function() {
          // 移除其他按钮的选中状态
          horoscopeBtns.forEach(b => {
            b.classList.remove('border-primary', 'bg-primary/10');
          });
          
          // 添加当前按钮的选中状态
          this.classList.add('border-primary', 'bg-primary/10');
          
          // 记录选中的星座
          selectedSign = this.getAttribute('data-sign');
        });
      });
      
      // 表单提交事件
      const form = document.getElementById('horoscope-form');
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // 检查是否选择了星座
        if (!selectedSign) {
          alert('请选择你的星座');
          return;
        }
        
        // 获取选中的兴趣方向
        const selectedFocus = Array.from(document.querySelectorAll('input[name="focus"]:checked'))
          .map(input => input.value);
        
        // 如果没有选择兴趣方向，默认选择所有
        const focusToUse = selectedFocus.length > 0 ? selectedFocus : ['personality', 'love', 'career', 'luck'];
        
        // 获取星座数据（如果没有对应数据，使用白羊座作为默认）
        const signData = horoscopeData[selectedSign] || horoscopeData.aries;
        
        // 更新结果区域
        document.getElementById('result-sign').textContent = signData.name;
        document.getElementById('result-date').textContent = signData.date;
        
        const iconElement = document.getElementById('result-icon').querySelector('i');
        iconElement.className = `fa ${signData.icon} text-xl ${signData.color}`;
        
        // 更新解读内容
        const contentElement = document.getElementById('result-content');
        contentElement.innerHTML = '';
        
        focusToUse.forEach(focus => {
          const p = document.createElement('p');
          p.className = 'text-gray-200 leading-relaxed';
          p.textContent = signData.descriptions[focus];
          contentElement.appendChild(p);
        });
        
        // 更新幸运信息
        document.getElementById('luck-color').textContent = signData.luck.color;
        document.getElementById('luck-number').textContent = signData.luck.number;
        document.getElementById('luck-food').textContent = signData.luck.food;
        document.getElementById('luck-match').textContent = signData.luck.match;
        
        // 生成并更新运势图表
        const luckData = generateRandomLuckData();
        initLuckChart(luckData);
        
        // 显示结果区域，隐藏初始状态
        document.getElementById('initial-right').classList.add('hidden');
        document.getElementById('result-container').classList.remove('hidden');
        
        // 平滑滚动到结果区域
        document.getElementById('result-container').scrollIntoView({
          behavior: 'smooth'
        });
      });
      
      // 重新生成按钮点击事件
      document.querySelector('#result-container button:first-of-type').addEventListener('click', function() {
        // 生成新的运势数据
        const newLuckData = generateRandomLuckData();
        initLuckChart(newLuckData);
        
        // 轻微抖动效果，提示更新完成
        const resultCard = document.querySelector('#result-container .bg-glass');
        resultCard.classList.add('animate-shake');
        setTimeout(() => {
          resultCard.classList.remove('animate-shake');
        }, 500);
      });
      
      // 分享按钮点击事件
      document.querySelector('#result-container button:last-of-type').addEventListener('click', function() {
        alert('分享功能即将上线，敬请期待！');
      });
      
      // 兴趣方向选择
      const focusLabels = document.querySelectorAll('label:has(input[name="focus"])');
      focusLabels.forEach(label => {
        const input = label.querySelector('input');
        
        label.addEventListener('click', function() {
          input.checked = !input.checked;
          
          if (input.checked) {
            label.classList.add('border-primary', 'bg-primary/10');
          } else {
            label.classList.remove('border-primary', 'bg-primary/10');
          }
        });
      });
    });
  </script>
</body>
</html>
